<%- include('./partials/header') %>
    <% var sum = 0; %>
    <% var discount = 0; %>
    <% var counter = 1 %>
    <% var similarArray = [] %>
    <% for(let i = 0; i < user.cart.length - 1; i++){ %>
            <% if(user.cart[i].name == user.cart[i+1].name){ %>
                <% similarArray.push(user.cart[i].name) %>
                <% counter = counter + 1 %>  
            <% } %>
    <% } %>
    <% user.cart.forEach(function (product){ %>
        <% sum += product.price %>
        <% discount += product.isdiscounted %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden">
            <div class="w-full flex justify-center items-center">
            <img src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" class="w-full">
            </div>
            <div class="flex justify-between w-full px-3 py-3 bg-[<%= user.cart[0].panelcolor %>]">
                <h3 class="text-[<%= product.textcolor %>] text-xl"></h3>
                <div class="flex items-center gap-2">
                    <button id="add" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></button>
                    <div class="px-2 py-1 rounded-md bg-white text-black">
                        <% for(let i = 0; i < user.cart.length - 1; i++){ %>
                            <% if(product.name = similarArray[i]){ %>
                               <%= counter %>
                            <% } %>
                       <% } %>
                    </div>
                    <button id="subtract" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></button>
                </div>
            </div>
        </div>
        
    </div>
    <% }) %>
    <div class="w-full h-full ml-[45%] pl-10 pt-10 pb-10 mt-[-130%]">
        <h3 class="text-xl">Price Breakdown</h3>
        <div class="px-10 mt-5">
            <div class="flex mt-2">
                <h4 class="w-1/3">Product Price</h4>
                <h4>$<%= sum %></h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Discount on Product</h4>
                <h4>$<%= discount %></h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Platform Fee</h4>
                <h4>
                    <% var platformfee = 0.89 %>
                    $<%= platformfee %>
                </h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Shipping Fee</h4>
                <h4>FREE</h4>
            </div>
        </div>
        <div class="w-[50%] h-[1px] bg-black mt-10"></div>
        <div class="flex mt-5">
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">
                <% var total = sum - discount + platformfee %>
                $<%= total %>
            </h3>
        </div>
        <form action=""></form>
    </div>
    <%- include('./partials/footer') %>

